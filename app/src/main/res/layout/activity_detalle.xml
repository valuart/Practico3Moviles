<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActivity">


        <TextView
            android:id="@+id/tvActores"
            android:layout_width="118dp"
            android:layout_height="40dp"
            android:layout_marginStart="181dp"
            android:layout_marginLeft="181dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="181dp"
            android:layout_marginRight="181dp"
            android:hint="@string/tv_actor"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalle" />

        <TextView
            android:id="@+id/tvDirector"
            android:layout_width="117dp"
            android:layout_height="45dp"
            android:layout_marginStart="181dp"
            android:layout_marginLeft="181dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="180dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="117dp"
            android:hint="@string/tv_direc"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvActores"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="263dp"
            android:layout_height="76dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="161dp"
            android:layout_marginRight="161dp"
            android:fontFamily="sans-serif-black"
            android:hint="@string/text_nombre"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="143dp"
            android:layout_height="141dp"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvDetalle"
            android:layout_width="330dp"
            android:layout_height="156dp"
            android:layout_marginStart="174dp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="179dp"
            android:layout_marginRight="179dp"
            android:hint="@string/tv_detalle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFoto" />


</androidx.constraintlayout.widget.ConstraintLayout>
